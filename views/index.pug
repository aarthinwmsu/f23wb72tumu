extends layout

block content
  h1= title
  p Welcome to #{title}
  p This is Express Default Page. My name is Aarthi Reddy.
  button(type="button", class="btn btn-secondary" onClick='goFaster()') Press Me
  div#faster Increase the speed.
  script.
    var mph = 20;
    var change = 1;
    function goFaster(){
      mph += change;
      change += 1;
      document.getElementById("faster").innerText = `MPH ${mph} with change ${change}`;
    }
    
   
  